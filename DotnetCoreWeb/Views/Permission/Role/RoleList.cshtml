@section Header{
    <link href="~/css/pagination.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>角色中心</h5>
            </div>

            <div class="ibox-content">
                <div class="row">
                    @using (Html.BeginForm("RoleList", "Role", FormMethod.Get, new { id = "searchForm" }))
                    {
                        <div class="col-sm-4 m-b-xs">
                            <label class="col-sm-2 control-label text-right">名称</label>
                            <div class="col-sm-10">
                                <input class="input-sm form-control" type="text" name="RoleName" id="RoleName" />
                            </div>
                        </div>
                        <div class="col-sm-4 m-b-xs">
                            <label class="col-sm-2 control-label text-right">描述</label>
                            <div class="col-sm-10">
                                <input class="input-sm form-control" type="text" name="RoleDescription" id="RoleDescription" />
                            </div>
                        </div>
                        <div class="col-sm-2 m-b-xs">
                            <button type="button" id="btnSubmit" class="btn btn-sm btn-primary">
                                <i class="glyphicon glyphicon-zoom-in"></i>
                                搜索
                            </button>
                            <a id="btnAddRole" href="javascript:void(0)" class="btn btn-sm btn-success" onclick="addRole()">
                                <i class="glyphicon glyphicon-plus-sign"></i>
                                添加
                            </a>
                        </div>
                    }
                </div>
                <div class="table-responsive">
                    <table id="dataList" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>名称</th>
                                <th>描述</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div id="Pager" class="pager"></div>
            </div>
        </div>
    </div>
</div>

<!--设置角色-->
<div id="editRole" style="width: 500px; display: none;">
    <form class="form-horizontal" style="width: 450px; margin-top:10px;">
        <div class="form-group">
            <label class="col-sm-3 control-label">名称：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="txtRoleName" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">描述：</label>
            <div class="col-sm-8">
                <textarea id="textRoleDescription" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-8">
                <input type="hidden" value="" id="hidRoleId" />
                <a id="btnEp" class="btn btn-w-m btn-info" href="javascript:void(0)">确定</a>
                <a id="btnCancel" class="btn btn-w-m btn-white" href="javascript:closeEditRole(0)">取消</a>
            </div>
        </div>
    </form>
</div>

@section Footer{
    <script type="text/x-jquery-tmpl" id="temp">
        <tr>
            <td>${Id}</td>
            <td>${RoleName}</td>
            <td>${RoleDescription}</td>
            <td class="text-right">
                <a href="javascript:void(0)" onclick="permissionMenuList('${Id}','${RoleName}')"><i class="glyphicon glyphicon-user text-navy"></i>权限</a>
                <a href="javascript:void(0)" data='{"Id":"${Id}","RoleName":"${RoleName}","RoleDescription":"${RoleDescription}"}' onclick="updateRole(this)"><i class="glyphicon glyphicon-pencil text-navy"></i>修改</a>
                <a href="javascript:void(0)" data='{"Id":"${Id}","RoleName":"${RoleName}","RoleDescription":"${RoleDescription}"}' onclick="removeRoele(this)"><i class="glyphicon glyphicon-trash text-navy"></i>删除</a>
            </td>
        </tr>
    </script>
    <script src="~/lib/jquery.tmpl.js"></script>
    <script src="~/js/widget/pagination.js"></script>
    <script src="~/js/views/Permission/Role/RoleList.js"></script>
}